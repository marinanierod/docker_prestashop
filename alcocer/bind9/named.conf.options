options {
        directory "/var/cache/bind";
        forwarders {
                192.168.102.2;
        };
        dnssec-validation auto;
        auth-nxdomain no;    # conform to RFC1035
        # para no copar el puerto 53 en el host, pongo Bind9 en otro no privilegiado
        listen-on port 5353 { any; };
        listen-on-v6 { any; };
};
